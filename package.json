{
  "name": "dynamic-matrix-action",
  "version": "1.0.0",
  "description": "Generate dynamic GitHub Actions matrices based on conditional logic",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/main.ts -o dist -m --license licenses.txt",
    "pack": "ncc build src/main.ts -o dist --license licenses.txt",
    "watch": "ncc build src/main.ts -o dist -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "format": "prettier --write '**/*.{js,ts,json,yml,yaml}'",
    "lint": "eslint src/**/*.ts",
    "all": "npm run format && npm run lint && npm run test && npm run build"
  },
  "keywords": [
    "github-actions",
    "dynamic-matrix",
    "ci-cd"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "tslib": "^2.8.1",
    "typescript": "^5.3.3"
  }
}
