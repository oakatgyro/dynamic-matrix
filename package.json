{
  "name": "dynamic-matrix-action",
  "version": "0.1.0",
  "description": "Generate dynamic GitHub Actions matrices based on conditional logic",
  "author": "oakatgyro",
  "type": "module",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/oakatgyro/dynamic-matrix-action.git"
  },
  "bugs": {
    "url": "https://github.com/oakatgyro/dynamic-matrix-action/issues"
  },
  "keywords": [
    "actions",
    "matrix",
    "ci-cd"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "coverage": "npx make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "prettier --write '**/*.{js,ts,json,yml,yaml}'",
    "format:check": "npx prettier --check .",
    "lint": "eslint src/**/*.ts",
    "package": "rollup --config rollup.config.ts --configPlugin typescript",
    "package:watch": "npm run package -- --watch",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules\" jest",
    "all": "npm run format:write && npm run lint && npm run test && npm run coverage && npm run package"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.1",
    "@github/local-action": "^5.1.0",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.3",
    "jest": "^30.0.5",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.6.2",
    "rollup": "^4.46.2",
    "ts-jest": "^29.4.1",
    "ts-jest-resolver": "^2.0.1",
    "typescript": "^5.3.3"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "*"
  }
}
